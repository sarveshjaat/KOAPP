<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_6sdp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_documentname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_5sdp"
            android:gravity="start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/tv_imgdocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/document"
            app:layout_constraintTop_toBottomOf="@id/tv_documentname">
        </ImageView>

        <ImageView
            android:id="@+id/tv_imgdocumentpdf"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:adjustViewBounds="true"
            android:visibility="gone"

            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/pdf"
            app:layout_constraintTop_toBottomOf="@id/tv_imgdocument">
        </ImageView>

        <ImageView
            android:id="@+id/tv_imgdocumentexcel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/excel"
            app:layout_constraintTop_toBottomOf="@id/tv_imgdocumentpdf">

        </ImageView>

        <ImageView
            android:id="@+id/tv_imgdocumentcdr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:adjustViewBounds="true"
            android:visibility="gone"
            android:layout_margin="@dimen/_20sdp"
            android:src="@drawable/cdr"
            app:layout_constraintTop_toBottomOf="@id/tv_imgdocumentexcel">

        </ImageView>
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_imgdocumentcdr"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/btn_download"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/download"
                android:contentDescription="Download" />

            <ImageView
                android:id="@+id/btn_share"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginRight="@dimen/_70sdp"
                android:visibility="gone"
                android:layout_marginStart="16dp"
                android:contentDescription="Share" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
