<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OTPVerifyActivity">

        <!-- OTP Image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:src="@drawable/onetimepswrd" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:text="@string/verificationtv"
            app:layout_constraintTop_toBottomOf="@id/imageView"
            app:layout_constraintEnd_toEndOf="parent" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_verifyviasms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:textSize="@dimen/_12sdp"
            android:text="@string/verificationviasmstv"
            app:layout_constraintTop_toBottomOf="@id/txt_verify"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- OTP Pin View -->
        <com.chaos.view.PinView
            android:id="@+id/otpview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:inputType="number"
            android:cursorVisible="true"
            app:itemCount="6"
            app:itemWidth="50dp"
            app:itemHeight="50dp"
            app:itemRadius="10dp"
            app:lineColor="@color/navblueold"
            app:hideLineWhenFilled="false"
            android:itemBackground="@color/white"
            style="@style/PinWidget.PinView"
            app:layout_constraintTop_toBottomOf="@id/txt_verifyviasms"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Resend OTP -->
        <!--        <com.google.android.material.textview.MaterialTextView-->
        <!--            android:id="@+id/txt_resendotp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:gravity="center"-->
        <!--            android:layout_marginTop="@dimen/_15sdp"-->
        <!--            android:layout_marginEnd="@dimen/_10sdp"-->
        <!--            android:textColor="@color/navblueold"-->
        <!--            android:text="@string/resendotp"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/otpview"-->
        <!--            app:layout_constraintEnd_toEndOf="parent" />-->

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_otptimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/otpview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <!-- Resend OTP -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_resendotp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginStart="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textColor="@color/navblueold"
            android:visibility="gone"
            android:text="@string/resendotp"
            app:layout_constraintTop_toBottomOf="@id/otpview"
            app:layout_constraintStart_toEndOf="@id/txt_otptimer"
            app:layout_constraintEnd_toEndOf="parent"/>


        <!-- Verify Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_otpverify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.7"
            app:layout_constraintHeight_percent="0.07"
            android:text="@string/otpverify"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/txt_resendotp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_40sdp"
            app:backgroundTint="@color/navblue" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

